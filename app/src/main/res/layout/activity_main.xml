<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="400dp"
        android:layout_height="550dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp" />

    <Button
        android:id="@+id/go_back"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textColor="@color/black"
        android:backgroundTint="#6eb9d4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/go_for"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webView" />

    <Button
        android:id="@+id/go_for"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Go Forward"
        android:textColor="@color/black"
        android:backgroundTint="#6eb9d4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reload"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/go_back"
        app:layout_constraintTop_toBottomOf="@+id/webView" />

    <Button
        android:id="@+id/reload"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:text="Reload"
        android:textColor="@color/black"
        android:backgroundTint="#6eb9d4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/go_for"
        app:layout_constraintTop_toBottomOf="@+id/webView" />


</androidx.constraintlayout.widget.ConstraintLayout>